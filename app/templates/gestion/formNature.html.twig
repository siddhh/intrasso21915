{% extends 'base.menu.html.twig' %}

{% block title %}
Incription nature Intrasso
{% endblock %}

{% block contenu %}
<container>

    {% for flashError in app.flashes('success') %}
        <div class="alert alert alert-success" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="text-center">
        <h2>Inscription Nature Intrasso</h2>
    </div>

   {# Form #}
    <main role="main">
        <div class="lead mx-auto" style="width: 800px;">
            <div class="page-label">
                {{ form_start(form) }}

                   <div class="form-group row" id="label">
                        {{ form_label(form.label, 'Intitul√©', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                        <div class="col-4">
                            {{ form_widget(form.label, {'attr': {'class': 'form-control select-picker'}}) }}
                            <div class="form-errors">
                                {{ form_errors(form.label) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group row" id="genres">
                        {{ form_label(form.genres, 'Nom', {'label_attr': {'class': 'col-2 col-form-label '}}) }}
                        <div class="col-4">
                            {{ form_widget(form.genres, {'attr': {'class': 'form-control select-picker'}}) }}
                            <div class="form-errors">
                                {{ form_errors(form.genres) }}
                            </div>
                        </div>
                    </div>
                    
                    <!--VALIDATION-->
                    <div class="form-group row" role="toolbar">
                        <div class="col-12">
                            <div class="float-left">
                                <a href="{{ path('accueil') }}" type="button" class="btn btn-secondary">Annuler</a>
                            </div>
                            <div class="float-right">
                                {% block boutons %}
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</container>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# <script src="{{ asset('assets/js/menu.js') }}"></script> #}
{% endblock %}
