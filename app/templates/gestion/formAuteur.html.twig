{% extends 'base.menu.html.twig' %}

{% block title %}
Incription auteur Intrasso
{% endblock %}

{% block contenu %}
<container>

    {% for flashError in app.flashes('success') %}
        <div class="alert alert alert-success" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="text-center">
        <h2>Inscription auteur Intrasso</h2>
    </div>

   {# Form #}
    <main role="main">
        <div class="lead mx-auto" style="width: 800px;">
            <div class="page-label">
                {{ form_start(form) }}
                    <div class="form-group row" id="nom">
                        {{ form_label(form.nom, 'Nom*', {'label_attr': {'class': 'col-2 col-form-label ' ~ (form.nom.vars.valid ? '' : 'form-label-error') }}) }}
                        <div class="col-10">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control ' ~ (form.nom.vars.valid ? '' : 'form-control-error')}}) }}
                            <div class="form-errors">
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                    </div>

                    <div class="form-group row" id="prenom">
                        {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'col-2 col-form-label ' ~ (form.prenom.vars.valid ? '' : 'form-label-error') }}) }}
                        <div class="col-10">
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control ' ~ (form.prenom.vars.valid ? '' : 'form-control-error')}}) }}
                            <div class="form-errors">
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                    </div>
                    
                    <!--BOUTONS-->
                    <div class="form-group row" role="toolbar">
                        <div class="col-12">
                            
                            <!--ANNULATION-->
                            <div class="col-3">
                                <button type="button" class="btn btn-secondary" id="retourArriere">Retour arrière</button>
                            </div>

                            <!--ENREGISTREMENT-->
                            <div class="float-right">
                                {% block boutons %}
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</container>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/auteur/modification.js') }}" type="text/javascript"></script>
    {# <script src="{{ asset('assets/js/menu.js') }}"></script> #}
{% endblock %}
